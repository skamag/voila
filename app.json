{
  "expo": {
    "name": "mail-voice",
    "slug": "mail-voice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icons8-microphone-32.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": ["RECORD_AUDIO"],
      "package": "com.magne.voila"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
